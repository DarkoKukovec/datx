{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2015", "es2016", "es2017"],
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "examples"],
  "include": ["src/**/*"]
}
