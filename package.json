{
  "name": "datx",
  "devDependencies": {
    "@infinumjs/eslint-config-core-ts": "^3.0.0",
    "eslint": "^8.3.0",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "prettier": "2.6.2",
    "typescript": "4.6.3"
  },
  "scripts": {
    "precommit": "npm run lint & lerna run test",
    "lint": "eslint packages/**/*.ts",
    "test": "lerna run test",
    "test:swr": "lerna run test --scope @datx/swr",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --no-private",
    "watch": "lerna run watch --no-private",
    "build:swr": "lerna run build --scope @datx/swr",
    "watch:swr": "lerna run watch --scope @datx/swr",
    "clean": "lerna clean && yarn clean:dist",
    "clean:dist": "lerna exec -- rm -rf ./dist"
  },
  "dependencies": {},
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
